<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmType"
            type="com.shop.ui.home.bean.type.TypeBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.type.TypeFragment">
        <q.rorbin.verticaltablayout.VerticalTabLayout
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            app:indicator_width="@dimen/dp_2"
            app:tab_height="@dimen/dp_50"
            android:id="@+id/mTab_type"
            app:tab_mode="scrollable"/>
        <com.shop.utils.CustomViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mVp_type" />
    </LinearLayout>
</layout>