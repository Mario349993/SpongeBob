<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.me.MeFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_info"
            android:layout_height="@dimen/dp_150"
            android:background="#474545">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <ImageView
                    android:id="@+id/iv_five_yh"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/f9"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_50" />
                <TextView
                    android:id="@+id/tv_five_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_five_yh"
                    android:text="点击登录"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="#FFFEFE"
                    android:layout_marginTop="@dimen/dp_80"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_five_yh"
                    android:text="昵称"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="#FFFEFE"
                    android:layout_marginTop="@dimen/dp_60"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/txt_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginLeft="@dimen/dp_90"
                    android:textColor="#FFFEFE"
                    android:layout_marginTop="@dimen/dp_100"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/iv_five_jt"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f10"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_195"
                    android:layout_marginTop="@dimen/dp_60" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--第一排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:orientation="horizontal"
            android:background="@drawable/five_shop">
            <LinearLayout
                android:id="@+id/ll_five_dingdan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_five_youhuiquan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_five_lipinka"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="礼品卡"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--    第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            android:background="@drawable/five_shop"
            >
            <LinearLayout
                android:id="@+id/ll_five_shoucang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_five_zuji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的足迹"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_five_fuli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f6"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员福利"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--    第三行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            android:background="@drawable/five_shop"
            >
            <LinearLayout
                android:id="@+id/ll_five_dizhi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址管理"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_five_zhanghao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号安全"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_five_lianxi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f6"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系客服"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--    第四行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            android:background="@drawable/five_shop"
            >
            <LinearLayout
                android:id="@+id/ll_five_bangzhu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f7"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帮助中心"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_five_fankui"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/f8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/five_shop" />
        </LinearLayout>

        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_out"
            android:text="退出登录"
            android:layout_gravity="center" />

    </LinearLayout>
</layout>